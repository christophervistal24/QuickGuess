    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/userLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First"
            android:onClick="firstActivity"
            android:id="@+id/btnFirst"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="35dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:onClick="categories"
                    android:adjustViewBounds="true"
                    android:background="@drawable/categories_btn"
                    android:scaleType="centerCrop"
                    android:id="@+id/btnCategory"/>


            </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accounts"
            android:onClick="accounts"
            android:id="@+id/btnThird"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rankings"
            android:onClick="rankings"
            android:id="@+id/btnFourth"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fifth"
            android:onClick="fifthActivity"
            android:id="@+id/btnFifth"/>


    </LinearLayout>

